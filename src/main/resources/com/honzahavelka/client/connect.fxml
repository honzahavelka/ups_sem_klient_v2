<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.honzahavelka.client.controller.ConnectController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="PŘIPOJENÍ K SERVERU">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <VBox spacing="5">
        <Label text="IP Adresa:" />
        <TextField fx:id="ipField" text="127.0.0.1" promptText="např. 127.0.0.1" />
    </VBox>

    <VBox spacing="5">
        <Label text="Port:" />
        <TextField fx:id="portField" text="10000" promptText="např. 10000" />
    </VBox>

    <Button fx:id="connectBtn" defaultButton="true" onAction="#onConnectClick" text="Připojit se" prefWidth="150" style="-fx-font-size: 14px; -fx-base: #4CAF50;"/>

    <Label fx:id="errorLabel" textFill="RED" wrapText="true" textAlignment="CENTER"/>
</VBox>
